<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%-include('./partials/head')%>

	<body>
		<!-- Include Header -->
		<%-include('./partials/headerLogueado')%>

		<main>
			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src=<%= profile.profilePicture %> alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center">
							<h1 class="main-title">
								<%= profile.username %>	
								<% if(user){ %>
									<a href="/profile/edit"><i class="fas fa-cog"></i></a>
								<% } else { %>
									<a class="btn mt-3 ml-4" href="">SEGUIR</a>
								<% } %>
							</h1>
						</div>
						<div>
							<h4 class="email"><i><%= profile.email %></i></h4>
							<ul>
								<li><%= profile.products.length %> productos</li>
								<li><%= profile.comments %> comentarios</li>
							</ul>
						</div>
					</div>
				</div>
			</section>

			<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Mis productos</h2>
					</div>

					<!-- Show mis productos -->
					<% for(let i=0; i<8; i++){ %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/id/<%= profile[i].id %>">
									<figure class="product-box_image">
										<img src=<%=profile[i].image%> alt="<%=profile[i].name%>">
									</figure>
									<article class="product-box_data">
										<h2><%=profile[i].name%></h2>
										<p><%=profile[i].user.username%></p>
										<p><%=profile[i].shortDescription%></p>
										<p>Comentarios: <%=profile[i].comments.length%></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
				</div>
			</div>
		</main>

		<!-- Include Footer -->
		<%-include('./partials/footer')%>
	</body>	
</html>