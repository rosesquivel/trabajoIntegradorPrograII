<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%-include('./partials/head')%>

	<body>
		<!-- Include Header -->
		<%-include('./partials/headerLogueado')%>

		<main>
			<!-- Datos del usuario -->
			<section class="info-usuario container products-wrapper">
				<div class="row">
					<div class="img-container offset-3 col-2">
						<img src=<%= user.profilePicture %> alt="foto de perfil" class="foto-perfil">
					</div>
					<div class="data-container col-6">
						<div class="d-flex align-items-center">
							<h1 class="main-title">
								<%= user.username %>
								<a href="/profile/edit">
									<i class="fas fa-cog"></i>
								</a>
							</h1>
							<a class="btn mt-3 ml-4" href="">SEGUIR</a>
						</div>
						<div>
							<h4 class="email"><i><%= user.email %></i></h4>
							<ul>
								<li><%= user.cantproducts %></li>
								<li><%= user.follows %></li>
								<li><%= user.comments %></li>
							</ul>
						</div>
					</div>
				</div>
			</section>
			<!-- /Datos del usuario -->

			<!-- Mis productos -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Mis productos</h2>
					</div>
					<!-- Show mis productos -->
					<% for(let i=0; i<8; i++){ %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/products/id/<%= product[i].id %>">
									<figure class="product-box_image">
										<img src=<%=product[i].image%> alt="<%=product[i].name%>">
									</figure>
									<article class="product-box_data">
										<h2><%=product[i].name%></h2>
										<img src="<%=product[i].user.profilePicture%>" alt="">
										<p><%=product[i].user.username%></p>
										<p><%=product[i].shortDescription%></p>
										<p>Comentarios: <%=product[i].comments.length%></p>
									</article>
								</a>
							</section>
						</div>
					<% } %>
				</div>
			</div>
		</main>

		<!-- Include Footer -->
		<%-include('./partials/footer')%>
	</body>	
</html>