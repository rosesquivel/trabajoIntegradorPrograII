<!DOCTYPE html>
<html lang="es">
	<!-- Include Head -->
	<%-include('./partials/head')%>

	<body>
		<!-- Include Header -->
		<%-include('./partials/header')%>

		<!-- Formulario  -->
		<main class="container">
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Regístrate</h2>
					</div>
				</div>
				
				<form class="form-register" action="/register" method="POST"> //en action antes decía "/profile"
					<input class="controls" type="text" name="username" id="username" placeholder="Nombre de usuario" required>
					<input class="controls" type="email" name="email" id="email" placeholder="Email" required>
					<input class="controls" type="password" name="password" id="password" placeholder="Contraseña" required>
					<input class="controls" type="date" name="bDate" id="bDate" placeholder="Fecha de nacimiento" required>
					<input class="controls" type="tel" name="phone" id="phone" placeholder="Teléfono" required>
					<input class="controls" type="numbers" name="dni" id="dni" placeholder="DNI">
					<input class="controls" type="texto" name="profilePicture" id="profilePicture" placeholder="Imagen de perfil" required>
					<button class="button-send" type="submit">Registrarme</button>
				</form>
			</div>
		</main>
				
		<!-- Include Footer -->
		<%-include('./partials/footer')%>
	</body>
</html>